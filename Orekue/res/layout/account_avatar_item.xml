<?xml version="1.0" encoding="utf-8"?>
<jp.magusa.orekue.android.status.AccountCustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AACL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_frame"
    android:checkMark="?android:attr/listChoiceIndicatorSingle"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp" >

    <RadioButton
        android:id="@+id/rbtn_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="false"
        android:focusable="false" />

    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:scaleType="fitCenter" />

</jp.magusa.orekue.android.status.AccountCustomLayout>
